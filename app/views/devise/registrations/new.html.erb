<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center"> 
    <% if params[:plan] == '3' %>
      <h1>Pro Account</h1>
      <p>Sign up for the pro account for $9.99/month and get access to the community and contact information!</p>
    <% elsif params[:plan] == '2' %>
      <h1>Advanced Account</h1>
      <p>Sign up for $4.99 and get more access than basic people to the community.</p>
      <% else %>
      <h1> Basic Account</h1>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
    <h2>Sign up</h2>
      
      <% if params[:plan] == '3' %>
        <%= render "pro_form" %>
      <% elsif params[:plan] == '2' %>
        <%= render "advanced_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>